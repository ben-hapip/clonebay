{
  "name": "clonebay",
  "version": "0.1.0",
  "private": true,
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "no-unused-expressions": "off",
      "no-unused-vars": [
        "warn",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {}
      }
    }
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "prettier": "^1.18.2",
    "xo": "^0.25.3"
  }
}
